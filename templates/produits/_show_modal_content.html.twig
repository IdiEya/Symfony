{% extends 'base.html.twig' %}

{% block body %}
<div class="container py-5">
    <div class="card-body">
        <div class="row mb-4">
            {% if produit.photo %}
            <div class="col-md-4 text-center">
                <img src="{{ asset('uploads/photos/' ~ produit.photo) }}" 
                     class="img-fluid rounded mb-3" 
                     alt="Image du produit"
                     style="max-height: 250px;">
            </div>
            {% endif %}
            
            <div class="col-md-{% if produit.photo %}8{% else %}12{% endif %}">
                <div class="data-container">
                    <!-- ID -->
                
                    
                    <!-- Nom -->
                    <div class="row mb-3">
                        <div class="col-4 col-sm-3 fw-bold">Nom</div>
                        <div class="col-8 col-sm-9">{{ produit.nom }}</div>
                    </div>
                    
                    <!-- Référence -->
                    <div class="row mb-3">
                        <div class="col-4 col-sm-3 fw-bold">Référence</div>
                        <div class="col-8 col-sm-9">{{ produit.ref }}</div>
                    </div>
                    
                    <!-- Prix -->
                    <div class="row mb-3">
                        <div class="col-4 col-sm-3 fw-bold">Prix</div>
                        <div class="col-8 col-sm-9">{{ produit.prix|number_format(2, ',', ' ') }} DT</div>
                    </div>
                    
                    <!-- Stock -->
                    <div class="row mb-3">
                        <div class="col-4 col-sm-3 fw-bold">Stock</div>
                        <div class="col-8 col-sm-9">
                            <span class="badge {{ produit.quantite > 0 ? 'bg-success' : 'bg-danger' }}">
                                {{ produit.quantite }} unité(s)
                            </span>
                        </div>
                    </div>
                    
                    <!-- Catégorie -->
                    <div class="row mb-3">
                        <div class="col-4 col-sm-3 fw-bold">Catégorie</div>
                        <div class="col-8 col-sm-9">{{ produit.categorie }}</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Le reste du code reste inchangé -->
        <div class="mb-4">
            <h5 class="mb-3"><i class="fas fa-align-left me-2"></i>Description</h5>
            <div class="border rounded p-3 bg-light">
                {{ produit.description|default('Aucune description disponible')|nl2br }}
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center"  >
            <a href="{{ path('app_produits_index') }}" class="btn btn-outline-secondary" style="background-color:rgb(195, 177, 229);">
                <i class="fas fa-arrow-left me-2"></i>Retour à la liste
            </a>
        
        </div>
    </div>
</div>

<!-- Modal de suppression (inchangé) -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirmation de suppression
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Êtes-vous sûr de vouloir supprimer définitivement ce produit ?
                <div class="alert alert-warning mt-3">
                    <i class="fas fa-info-circle me-2"></i>
                    Cette action supprimera toutes les données associées de manière irréversible.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Annuler
                </button>
                {{ include('produits/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}