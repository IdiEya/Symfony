    background-color:rgb(250, 243, 243); /* Noir */
    color: white; /* Texte en blanc */
    border-radius: 8px;
    overflow: hidden;
}

.table thead {
    background-color:rgb(195, 177, 229); /* Noir plus clair pour l'en-tête */
    color: white;
}

.table th, .table td {
    border-color: #B19CD9; /* Bordures gris foncé */
}

.table-hover tbody tr:hover {
    background-color: rgb(195, 177, 229); /* Survol gris foncé */
}

/* Icônes dans les boutons */
.btn i {
    color: inherit; /* Hérite de la couleur du bouton */
}

/* Adaptation des ombres */
.shadow-sm {
    box-shadow: 0 4px 12px #B19CD9!important;
}
 /* Couleurs personnalisées */
        :root {
            --primary-color: #6f42c1; /* Couleur principale (Violet) */
            --secondary-color: #5e33b5; /* Couleur secondaire */
            
            --text-color: #ffffff; /* Couleur du texte */
        }

        /* Style personnalisé pour la liste des participations */
        .participations-card {
            background: white;
            border-radius: 10px;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            padding: 25px;
            margin-bottom: 30px;
        }

        .participations-title {
            color: var(--primary-color);
            font-weight: 600;
            margin-bottom: 25px;
            border-bottom: 1px solid #e9ecef;
            padding-bottom: 10px;
        }

        .participations-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            border: 1px solid #e9ecef;
        }

        .participations-table th {
            background-color: var(--primary-color);
            color: var(--text-color);
            padding: 12px 15px;
            text-align: left;
            position: sticky;
            top: 0;
            font-weight: 600;
            border-bottom: 1px solid #e9ecef;
        }

        .participations-table td {
            padding: 12px 15px;
            border-bottom: 1px solid #e9ecef;
            vertical-align: top;
            color: #495057;
        }

        /* Style pour les lignes impaires */
        .participations-table tr:nth-child(odd) {
            background-color: #f8fafc;
        }

        /* Survol des lignes */
        .participations-table tr:hover {
            background-color: var(--hover-color);
            color: var(--text-color);
        }

        .no-participations {
            text-align: center;
            padding: 40px;
            color: #6c757d;
            font-size: 1.1rem;
            border: 1px dashed #dee2e6;
            border-radius: 8px;
            background-color: #f8f9fa;
            margin: 20px 0;
        }

        .btn-back {
            background-color: var(--primary-color);
            color: var(--text-color);
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s;
        }

        .btn-back:hover {
            background-color: var(--hover-color);
            color: var(--text-color);
            transform: translateY(-1px);
        }
        
/* Style pour les filtres */
.filter-card {
    background: white;
    border-radius: 10px;
    box-shadow: 0 4px 20px rgba(106, 13, 173, 0.1);
    padding: 20px;
    margin-bottom: 20px;
}

.filter-card label {
    color: var(--violet-fonce);
    font-weight: 500;
    margin-bottom: 8px;
    display: block;
}

.filter-card .form-select,
.filter-card .form-control {
    border: 1px solid var(--violet-pale);
    border-radius: 8px;
    padding: 10px 15px;
}

.filter-card .form-select:focus,
.filter-card .form-control:focus {
    border-color: var(--violet-clair);
    box-shadow: 0 0 0 0.25rem rgba(106, 13, 173, 0.25);
}

.filter-card .btn-primary {
    background: var(--violet-gradient);
    border: none;
}

.filter-card .btn-secondary {
    background: #f8f9fa;
    color: var(--violet-fonce);
    border: 1px solid var(--violet-pale);
