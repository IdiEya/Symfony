            // Recharger les données originales si la recherche est vide
            location.reload();
        }
        return;
    }

    // Afficher un indicateur de chargement
    container.innerHTML = <tr><td colspan="8" class="text-center"><i class="fas fa-spinner fa-spin"></i> Recherche en cours...</td></tr>;
    
    fetch({{ path('app_evenement_search_index') }}?query=${encodeURIComponent(query)})
    .then(response => {
        if (!response.ok) throw new Error(Erreur ${response.status});
        return response.json();
    })
    .then(data => {
        container.innerHTML = '';
        
        if (data.length === 0) {
            container.innerHTML = <tr><td colspan="8" class="text-center">Aucun résultat trouvé</td></tr>;
            return;
        }

        data.forEach(event => {
            const row = document.createElement('tr');
            row.innerHTML = `
                <td>${event.nom}</td>
                <td title="${event.description}">${event.description}</td>
                <td>${event.dateDebut}</td>
                <td>${event.dateFin}</td>
                <td>${event.localisation}</td>
                <td>${event.frais} dt</td>
