    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Gestion du menu fixe
        let lastScroll = 0;
        const navbar = document.querySelector('.navbar');
        const navbarHeight = navbar.offsetHeight;

        window.addEventListener('scroll', () => {
            const currentScroll = window.pageYOffset;
            
            if (currentScroll > lastScroll && currentScroll > navbarHeight) {
                // Scroll vers le bas - cacher
                navbar.classList.add('navbar-hidden');
            } else {
                // Scroll vers le haut - afficher
                navbar.classList.remove('navbar-hidden');
                navbar.classList.add('navbar-visible');
            }
            
            lastScroll = currentScroll;
        });

        // Ajustement initial pour le contenu
        document.addEventListener('DOMContentLoaded', () => {
            document.body.style.paddingTop = navbarHeight + 'px';
        });

        // Script pour la recherche
        document.getElementById('search')?.addEventListener('input', function() {
            const query = this.value.trim();
            const container = document.getElementById('events-container');
            
            if (query.length < 2) {
                if (query.length === 0) {
                    location.reload();
                }
                return;
            }

            fetch({{ path('app_client_events') }}?query=${encodeURIComponent(query)})
            .then(response => {
                if (!response.ok) throw new Error(Erreur ${response.status});
                return response.json();
            })
            .then(data => {
                container.innerHTML = '';
                
                if (data.length === 0) {
                    container.innerHTML = `
                        <div class="no-events">
                            <i class="far fa-calendar-alt fa-3x mb-3"></i>
                            <h3>Aucun résultat</h3>
                            <p>Essayez un autre terme de recherche</p>
                        </div>`;
                    return;
                }

                data.forEach(event => {
                    const dateDebut = new Date(event.dateDebut);
                    const dateFin = new Date(event.dateFin);
                    const placesDispo = event.nombreDePlaces !== null 
                        ? ${event.nombreDePlaces - event.placesReservees}/${event.nombreDePlaces}
                        : 'Places illimitées';
                    
                    const statusClass = event.statut === 'COMPLET' ? 'status-complet' : 
                                      event.statut === 'TERMINE' ? 'status-termine' : 'status-avenir';
                    
                    // Construction des URLs directement avec les IDs
                    const participateUrl = /participation/new/${event.id};
                    const detailsUrl = /evenement/${event.id};
                    
                    container.innerHTML += `
                        <div class="event-card" data-id="${event.id}">
                            <div class="event-status ${statusClass}">
                                ${event.statut}
                            </div>
                            
                            <div class="event-img-container">
                                <img src="${event.photo ? '{{ asset('uploads/images/') }}' + event.photo : '{{ asset('images/event-default.jpg') }}'}" 
                                     alt="${event.nom}" 
                                     class="event-img"
                                     loading="lazy">
                            </div>
                            
                            <div class="event-details">
                                <h2 class="event-title">${event.nom}</h2>
                                
                                <div class="event-date">
                                    <i class="far fa-calendar-alt fa-icon"></i>
                                    Du ${dateDebut.toLocaleDateString('fr-FR')} au ${dateFin.toLocaleDateString('fr-FR')}
                                </div>
                                
                                <div class="event-location">
                                    <i class="fas fa-map-marker-alt fa-icon"></i>
                                    ${event.localisation}
                                </div>
                                
                                <div class="event-places">
                                    <i class="fas fa-users fa-icon"></i>
                                    Places: ${placesDispo}
                                </div>
                                
                                <div class="event-actions">
                                    <a href="${participateUrl}" 
                                       class="btn ${event.statut !== 'A_VENIR' ? 'btn-disabled' : 'btn-participate'}">
                                        <i class="fas fa-user-plus"></i> 
                                        ${event.statut === 'COMPLET' ? 'Complet' : 
                                         event.statut === 'TERMINE' ? 'Terminé' : 'Participer'}
                                    </a>
                                    
                                    <a href="${detailsUrl}" 
                                       class="btn btn-details">
                                        <i class="fas fa-eye"></i> Détails
                                    </a>
                                </div>
                            </div>
                        </div>`;
                });
            })
            .catch(error => {
                console.error('Search error:', error);
                container.innerHTML = `
                    <div class="no-events">
                        <i class="fas fa-exclamation-triangle fa-3x mb-3"></i>
                        <h3>Erreur de recherche</h3>
                        <p>Veuillez réessayer</p>
                    </div>`;
            });
        });
    <!-- Bootstrap 5 Bundle (incluant Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
     <!-- Leaflet JS -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialisation de la carte
            initMap();
        });

        function initMap() {
            const address = "{{ evenement.localisation|escape('js') }}";
            const loadingElement = document.getElementById('map-loading');
            const map = L.map('event-map').setView([0, 0], 2); // Vue monde par défaut
            
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a>',
                maxZoom: 19
            }).addTo(map);

            if (address) {
                loadingElement.style.display = 'flex';
                
                // Utilisation de l'API Nominatim avec timeout
                const controller = new AbortController();
                const timeoutId = setTimeout(() => controller.abort(), 10000);
                
                fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(address)}&limit=1`, {
                    signal: controller.signal,
                    headers: {
                        'User-Agent': 'GymTownApp/1.0 (contact@example.com)'
                    }
                })
                .then(response => {
                    clearTimeout(timeoutId);
                    if (!response.ok) throw new Error('Erreur réseau');
                    return response.json();
                })
                .then(data => {
                    if (data && data.length > 0) {
                        const lat = parseFloat(data[0].lat);
                        const lon = parseFloat(data[0].lon);
                        
                        map.setView([lat, lon], 15);
                        
                        L.marker([lat, lon])
                            .addTo(map)
                            .bindPopup(`<b>{{ evenement.nom|escape('js') }}</b><br>${address}`)
                            .openPopup();
                    } else {
                        // Si aucune localisation trouvée
                        map.setView([20, 0], 2); // Vue monde
                        L.marker([20, 0])
                            .addTo(map)
                            .bindPopup(`Adresse non trouvée: ${address}`)
                            .openPopup();
                    }
                })
                .catch(error => {
                    console.error('Erreur:', error);
                    map.setView([20, 0], 2);
                    L.marker([20, 0])
                        .addTo(map)
                        .bindPopup('Erreur de géocodage')
                        .openPopup();
                })
                .finally(() => {
                    loadingElement.style.display = 'none';
                });
            } else {
                loadingElement.style.display = 'none';
                map.setView([20, 0], 2);
                L.marker([20, 0])
                    .addTo(map)
                    .bindPopup('Aucune adresse fournie')
                    .openPopup();
            }
        }
    </script>
