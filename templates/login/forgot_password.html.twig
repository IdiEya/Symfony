{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'Mot de passe oublié'|trans }}</h1>

    {# Affichage des messages flash #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <form method="post" action="{{ path('app_forgot_password') }}">
        <div class="form-group">
            <label for="email">{{ 'Adresse Email'|trans }} :</label>
            <input type="email" id="email" name="email" class="form-control" required>
        </div>

        <button type="submit" class="btn btn-primary mt-3">
            {{ 'Envoyer le lien de réinitialisation'|trans }}
        </button>
    </form>

    <div class="mt-3">
        <a href="{{ path('app_login') }}">{{ 'Retour à la page de connexion'|trans }}</a>
    </div>
{% endblock %}
