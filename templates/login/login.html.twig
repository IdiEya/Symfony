<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ asset('assets/css/login.css') }}">
    <title>{{ 'Login - CARVILLA'|trans }}</title>
</head>
<body>
    <!-- Header -->

    
    <!-- Login Container -->
    <div class="login-container">
        <h2 class="login-title">{{ 'Account Login'|trans }}</h2>
        
        <form action="{{ path('app_login') }}" method="post">
            <div class="form-group">
                <label for="email" class="form-label">{{ 'Email Address'|trans }}</label>
                <input type="email" id="email" name="_username" class="form-input" placeholder="{{ 'Enter your email'|trans }}" required>
            </div>
            
            <div class="form-group">
                <label for="password" class="form-label">{{ 'Password'|trans }}</label>
                <input type="password" id="password" name="_password" class="form-input" placeholder="{{ 'Enter your password'|trans }}" required>
            </div>
            <input  type="hidden" name="_csrf_token" value="{{ csrf_token('login') }}">

            {% if error %}
                <div class="error-message">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
            
            <button type="submit" style=" background-color:rgb(146, 92, 248); width:525px;" class="login-btn">{{ 'Login'|trans }}</button>
            
            <div class="login-links">
                <a href="{{ path('app_forgot_password') }}" style="color:rgb(146, 92, 248);">{{ 'Forgot Password?'|trans }}</a>
                <a href="{{ path('app_register') }}" style="color:rgb(146, 92, 248);">{{ 'Create New Account'|trans }}</a>
            </div>
        </form>
        
        <div class="social-login">
            <p>{{ 'Or login with'|trans }}</p>
            <div class="social-buttons">
                <a href="#" class="social-btn">f</a>
                <a href="#" class="social-btn">G</a>
                <a href="#" class="social-btn">in</a>
            </div>
        </div>
    </div>
    <script src="{{ asset('assets/js/login.js') }}"></script>
</body>
</html>