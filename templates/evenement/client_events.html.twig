   <script>

      document.querySelectorAll('.btn-vote').forEach(button => {
    button.addEventListener('click', async function(e) {
        e.preventDefault();
        const form = this.closest('form');
        const url = form.action;
        const formData = new FormData(form);
        
        // Désactiver le bouton pendant l'appel
        button.disabled = true;
        button.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';

        try {
            const response = await fetch(url, {
                method: 'POST',
                body: formData,
                headers: {
                    'X-Requested-With': 'XMLHttpRequest' // Indique que c'est une requête AJAX
                }
            });

            if (!response.ok) {
                throw new Error('Erreur réseau');
            }

            const data = await response.json();
            
            // Mettre à jour les compteurs
            const voteContainer = form.closest('.event-votes');
            const likeBtn = voteContainer.querySelector('.btn-like');
            const dislikeBtn = voteContainer.querySelector('.btn-dislike');
            
            if (form.action.includes('like')) {
                likeBtn.innerHTML = `<i class="far fa-thumbs-up"></i> ${data.likes}`;
                dislikeBtn.innerHTML = `<i class="far fa-thumbs-down"></i> ${data.dislikes}`;
            } else {
                dislikeBtn.innerHTML = `<i class="far fa-thumbs-down"></i> ${data.dislikes}`;
                likeBtn.innerHTML = `<i class="far fa-thumbs-up"></i> ${data.likes}`;
            }
            
            // Mettre à jour les styles si nécessaire
            if (data.userVote === 1) {
                likeBtn.classList.add('active');
                dislikeBtn.classList.remove('active');
            } else if (data.userVote === -1) {
                dislikeBtn.classList.add('active');
                likeBtn.classList.remove('active');
            } else {
                likeBtn.classList.remove('active');
                dislikeBtn.classList.remove('active');
            }

        } catch (error) {
            console.error('Error:', error);
            alert('Une erreur est survenue lors du vote');
        } finally {
            button.disabled = false;
            // Restaurer l'icône originale
            if (form.action.includes('like')) {
                button.innerHTML = `<i class="far fa-thumbs-up"></i> ${button.textContent.match(/\d+/)[0]}`;
            } else {
                button.innerHTML = `<i class="far fa-thumbs-down"></i> ${button.textContent.match(/\d+/)[0]}`;
            }
        }
    });
});
