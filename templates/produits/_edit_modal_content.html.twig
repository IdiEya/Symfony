{% block body %}
{{ form_start(form, {
    'action': path('produit_modal_edit', {'id': produit.id}),
    'attr': {
        'enctype': 'multipart/form-data',
        'class': 'ajax-form',
        'novalidate': 'novalidate'
    }
}) }}

<div class="modal-content">
    <div class="modal-body">
        <div class="row g-4">
            <!-- Colonne gauche -->
            <div class="col-md-6">
                {{ form_row(form.nom, {
                    'attr': {'class': 'form-control-uniform' ~ (form.nom.vars.errors|length ? ' is-invalid')},
                    'label_attr': {'class': 'form-label'},
                    'help_attr': {'class': 'invalid-feedback'}
                }) }}
              

                {{ form_row(form.ref, {
                    'attr': {'class': 'form-control-uniform' ~ (form.ref.vars.errors|length ? ' is-invalid')},
                    'label_attr': {'class': 'form-label'},
                    'help_attr': {'class': 'invalid-feedback'}
                }) }}
              

                {{ form_row(form.prix, {
                    'attr': {'class': 'form-control-uniform' ~ (form.prix.vars.errors|length ? ' is-invalid')},
                    'label_attr': {'class': 'form-label'},
                    'row_attr': {'class': 'mb-3'},
                    'help_attr': {'class': 'invalid-feedback'}
                }) }}
          
            </div>

            <!-- Colonne droite -->
            <div class="col-md-6">
                {{ form_row(form.quantite, {
                    'attr': {'class': 'form-control-uniform' ~ (form.quantite.vars.errors|length ? ' is-invalid')},
                    'label_attr': {'class': 'form-label'},
                    'help_attr': {'class': 'invalid-feedback'}
                }) }}
                

                {{ form_row(form.categorie, {
                    'attr': {'class': 'form-select-uniform' ~ (form.categorie.vars.errors|length ? ' is-invalid')},
                    'label_attr': {'class': 'form-label'},
                    'help_attr': {'class': 'invalid-feedback'}
                }) }}
              
               <div class="mb-3">
    {{ form_label(form.photo, 'Image', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.photo, {'attr': {'class': 'form-control-uniform'}}) }}
    
   <div class="mt-2 text-center" id="imagePreview">
    {% if originalPhoto %}
        <img src="{{ asset('uploads/photos/' ~ originalPhoto) }}" 
             class="form-image-preview current-image"
             alt="Image actuelle">
        <div class="mt-2 text-muted small current-filename">
            Fichier actuel : {{ originalPhoto }}
        </div>
    {% else %}
        <span class="text-muted no-image">Aucune image disponible</span>
    {% endif %}
</div>
</div>
                
            </div>
        </div>

        <!-- Description -->
       <div class="mb-4">
            {{ form_row(form.description, {
                'attr': {'class': 'form-control form-textarea-uniform' ~ (form.description.vars.errors|length ? ' is-invalid')},
                'label_attr': {'class': 'form-label'},
                'help_attr': {'class': 'invalid-feedback'}
            }) }}
          
        </div>

        <!-- ... buttons ... -->
   
        <!-- Actions -->
        <div class="d-flex justify-content-between mt-4">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="background-color:rgb(195, 177, 229);">
                <i class="fas fa-arrow-left me-2"></i>Annuler
            </button>
            <button type="submit" class="btn btn-primary" style="background-color:rgb(195, 177, 229);">
                <i class="fas fa-save me-2"></i> Enregistrer
            </button>
        </div>
    </div>
</div>
 
{{ form_end(form) }}
{% endblock %}
{% block js %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.ajax-form').forEach(form => {
        form.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const submitButton = form.querySelector('button[type="submit"]');
            submitButton.setAttribute('disabled', 'true');

            try {
                const formData = new FormData(form);
                const response = await fetch(form.action, {
                    method: 'POST',
                    body: formData,
                    headers: { 'X-Requested-With': 'XMLHttpRequest' }
                });

                if (response.status === 422) {
                    const parser = new DOMParser();
                    const doc = parser.parseFromString(await response.text(), 'text/html');
                    const newForm = doc.querySelector('.ajax-form');
                    form.parentElement.innerHTML = newForm.innerHTML;
                    reinitScripts();
                    return;
                }

                if (response.ok) {
                    // Gestion du succès...
                }
            } catch (error) {
                console.error('Erreur:', error);
            } finally {
                submitButton.removeAttribute('disabled');
            }
        });
    });
});
</script>
{% endblock %}