{# templates/produituser/_details.html.twig #}

<div class="container-fluid">
    <div class="row">
        {% if produit.photo %}
        <div class="col-md-4">
            <img src="{{ asset('uploads/photos/' ~ produit.photo) }}" 
                 class="img-fluid rounded mb-3" 
                 alt="{{ produit.nom }}">
        </div>
        {% endif %}
        <div class="col-md-{% if produit.photo %}8{% else %}12{% endif %}">
            <h3 class="mb-3">{{ produit.nom }}</h3>
            <dl class="row">
                <dt class="col-sm-3">Référence</dt>
                <dd class="col-sm-9">{{ produit.ref }}</dd>

                <dt class="col-sm-3">Prix</dt>
                <dd class="col-sm-9">{{ produit.prix|number_format(2, ',', ' ') }} €</dd>

                <dt class="col-sm-3">Stock</dt>
                <dd class="col-sm-9">
                    <span class="badge {{ produit.quantite > 0 ? 'bg-success' : 'bg-danger' }}">
                        {{ produit.quantite }} disponible(s)
                    </span>
                </dd>

                <dt class="col-sm-3">Catégorie</dt>
                <dd class="col-sm-9">{{ produit.categorie }}</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">{{ produit.description|default('Aucune description') }}</dd>
            </dl>
        </div>
    </div>
</div>