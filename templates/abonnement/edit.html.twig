{% extends 'base.html.twig' %}

{% block title %}Modifier Abonnement{% endblock %}

{% block stylesheets %}
    <style>
        .page-container {
            background-color: #f9f9f9;
            padding: 40px 20px;
            max-width: 800px;
            margin: 40px auto;
            border-radius: 10px;
            box-shadow: 0 2px 15px rgba(92, 64, 111, 0.1);
        }

        .page-container h1 {
            text-align: center;
            color: #5C406F;
            font-weight: 600;
            margin-bottom: 20px;
            font-size: 2rem;
        }

        .page-container .back-link,
        .page-container .delete-link {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #5C406F;
            color: white;
            text-align: center;
            border-radius: 8px;
            text-decoration: none;
            font-size: 1rem;
            font-weight: 500;
            transition: background-color 0.3s ease;
        }

        .page-container .back-link:hover,
        .page-container .delete-link:hover {
            background-color: #9D77B8;
        }

        .delete-link {
            background-color: #dc3545;
        }

        .delete-link:hover {
            background-color: #c82333;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="page-container">
        <h1>Modifier l'abonnement</h1>

        <div class="form-group">
            {{ include('abonnement/_form.html.twig', {'button_label': 'Modifier'}) }}
        </div>

        <a href="{{ path('app_abonnement_index') }}" class="back-link">Retour Ã  la liste</a>

    </div>
{% endblock %}
