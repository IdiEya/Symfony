{% extends 'base.html.twig' %}

{% block title %}Modifier le Cours{% endblock %}

{% block body %}
<div class="page-container">
    <div class="content-card">
        <h1>Modifier le cours : {{ cour.localisation }}</h1>

        {{ form_start(form) }}
            {{ form_row(form.localisation) }}
            {{ form_row(form.dateDebut) }}
            {{ form_row(form.dateFin) }}
            {{ form_row(form.description) }}
            {{ form_row(form.prix) }}
            {{ form_row(form.salle) }}
            {{ form_row(form.placesDisponibles) }}
            <button type="submit" class="btn btn-primary">Enregistrer</button>
        {{ form_end(form) }}

        <a href="{{ path('cour_list') }}" class="btn btn-secondary">Retour à la liste des cours</a>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    <!-- Bootstrap CSS pour les styles par défaut -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome pour les icônes -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        /* Fond général */
        .page-container {
            background-color: #6A455D;
            min-height: 100vh;
            padding: 40px 20px;
        }

        /* Carte blanche centrée */
        .content-card {
            background-color: white;
            border-radius: 12px;
            padding: 30px;
            max-width: 100%;
            margin: 0 auto;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

        /* Titres */
        .content-card h1 {
            color: #6A455D;
            margin-bottom: 20px;
        }

        /* Formulaire */
        .form-control {
            margin-bottom: 15px;
        }

        /* Boutons */
        .btn-primary, .btn-secondary {
            border-radius: 6px;
            font-size: 14px;
            transition: all 0.2s ease-in-out;
        }

        .btn-primary {
            background-color: #6A455D;
            color: white;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
        }

        .btn-primary:hover {
            background-color: #57374a;
            transform: translateY(-2px);
        }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
        }
    </style>
{% endblock %}
