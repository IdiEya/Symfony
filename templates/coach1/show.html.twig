{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block stylesheets %}
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #6A455D;
        color: #fff;
        padding: 20px;
    }

    h1 {
        font-size: 2rem;
        color: #ffffff;
        margin-top: 20px;
        text-align: center;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: #fff;
        color: #000;
        margin-top: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    table, th, td {
        border: 1px solid #ccc;
    }

    th, td {
        padding: 12px;
        text-align: left;
    }

    th {
        background-color: #8A5D78;
        color: white;
    }

    td {
        background-color: #f9f9f9;
    }

    a {
        color: #007bff;
        text-decoration: none;
        padding: 10px;
        border-radius: 4px;
        display: inline-block;
        margin-top: 20px;
    }

    a:hover {
        text-decoration: underline;
    }

    a.btn-secondary {
        background-color: #6c757d;
        color: white;
        padding: 10px 20px;
        border-radius: 4px;
        font-size: 16px;
    }

    a.btn-secondary:hover {
        background-color: #5a6268;
    }

</style>
{% endblock %}

{% block body %}
    <h1>User</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ user.role }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ user.telephone }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.adresse }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ user.photo }}</td>
            </tr>
            <tr>
                <th>Specialite</th>
                <td>{{ user.specialite }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ user.note }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_coach1_index') }}" class="btn-secondary">Back to list</a>
     <td>
                </td>
{% endblock %}
