function debounce(func, wait) {
    let timeout;
    return function(...args) {
        clearTimeout(timeout);
        timeout = setTimeout(() => func.apply(this, args), wait);
    };
}

// Puis modifiez votre écouteur d'événement
document.getElementById('global-search').addEventListener('input', debounce(function() {
    const query = this.value.trim();
    const container = document.querySelector('.event-table tbody');
    
    if (query.length < 2) {
        if (query.length === 0) {
            location.reload();
        }
        return;
    }

    // Afficher un indicateur de chargement
    container.innerHTML = '<tr><td colspan="8" class="text-center"><i class="fas fa-spinner fa-spin"></i> Recherche en cours...</td></tr>';
    
    fetch(`{{ path('app_evenement_search_index') }}?query=${encodeURIComponent(query)}`)
    .then(response => {
        if (!response.ok) {
            throw new Error(`Erreur HTTP: ${response.status}`);
        }
        return response.json();
    })
    .then(data => {
        if (!data.success) {
            throw new Error(data.message || 'Erreur lors de la recherche');
        }

        container.innerHTML = '';
        
        if (!data.events || data.events.length === 0) {
