{% extends 'base.html.twig' %}

{% block title %}Créer un nouvel abonnement{% endblock %}

{% block stylesheets %}
    <style>
        /* Style de la page */
        .page-container {
            background-color: #f9f9f9;
            padding: 20px;
            max-width: 600px;
            margin: 40px auto;
            border-radius: 10px;
            box-shadow: 0 2px 15px rgba(92, 64, 111, 0.1);
            display: none; /* Modal invisible par défaut */
        }

        .page-container h1 {
            text-align: center;
            color: #5C406F;
            font-weight: 600;
            margin-bottom: 20px;
            font-size: 2rem;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        #checkout-button {
            background-color: #5C406F;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1rem;
            margin-top: 10px;
            width: 100%;
        }

        #checkout-button:hover {
            background-color: #9D77B8;
        }

        /* Style de la modal */
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.4);
        }

        .modal-content {
            background-color: #fff;
            margin: 10% auto;
            padding: 20px;
            border-radius: 10px;
            width: 80%;
            max-width: 500px;
        }

        .modal-header {
            text-align: center;
            font-size: 1.5rem;
            color: #5C406F;
        }

        .modal-footer {
            text-align: center;
            margin-top: 20px;
        }

        .close {
            color: #aaa;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
        }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Modal (Popup) -->
    <div id="myModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <span class="close">&times;</span>
                <h1>Créer un nouvel abonnement</h1>
            </div>

            {{ form_start(form, { 'attr': { 'novalidate': 'novalidate' } }) }}
                <div class="form-group">
                    {{ form_label(form.type) }}
                    {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.dateInitiale) }}
                    {{ form_widget(form.dateInitiale, {'attr': {'class': 'form-control'}}) }}
                </div>

                <button type="submit" class="btn btn-primary" id="checkout-button">Payer</button>
            {{ form_end(form) }}

      
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const modal = document.getElementById('myModal');
            const closeBtn = document.querySelector('.close');

            // Afficher la modal
            modal.style.display = "block";

            // Fermer la modal
            closeBtn.addEventListener('click', function() {
                modal.style.display = "none";
            });

            window.addEventListener('click', function(event) {
                if (event.target === modal) {
                    modal.style.display = "none";
                }
            });
        });

        const stripe = Stripe('{{ stripe_public_key }}');

        document.getElementById('checkout-button').addEventListener('click', function() {
            fetch('{{ path('create_checkout_session', {id: abonnement.id}) }}', {
                method: 'POST'
            })
            .then(response => response.json())
            .then(session => {
                return stripe.redirectToCheckout({ sessionId: session.id });
            })
            .then(result => {
                if (result.error) {
                    alert(result.error.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
        });
    </script>
    <script src="https://js.stripe.com/v3/"></script>
{% endblock %}
