<script>
document.addEventListener('DOMContentLoaded', function() {
    const address = "{{ evenement.localisation|escape('js') }}";
    const map = L.map('map').setView([34, 9], 6); // Vue par défaut centrée sur la Tunisie
    
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a>'
    }).addTo(map);

    // Géocodage de l'adresse
    if (address) {
        fetch(https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(address)}&countrycodes=tn)
            .then(response => response.json())
            .then(data => {
                if (data.length > 0) {
                    const lat = parseFloat(data[0].lat);
                    const lon = parseFloat(data[0].lon);
                    
                    map.setView([lat, lon], 15);
                    
                    L.marker([lat, lon])
                        .addTo(map)
                        .bindPopup(<b>{{ evenement.nom|escape('js') }}</b><br>${address});
                }
            })
            .catch(error => {
                console.error('Erreur de géocodage:', error);
            });
    }
});
